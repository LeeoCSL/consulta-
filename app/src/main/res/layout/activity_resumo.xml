<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.consultai.activities.ResumoActivity"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="551dp"
        android:padding="15dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <TextView
            android:id="@+id/txtResumo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RESUMO DE USO"
            android:textStyle="bold"
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/txt4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Previsão com base em saldo atual:"
            android:layout_below="@+id/txtResumo"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textSize="15sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00/00/0000"
            android:layout_alignParentRight="true"
            android:layout_alignBaseline="@+id/txt4"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_below="@id/txt4"
            android:background="@color/cinza"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/txt5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view1"
            android:text="Média de gasto por dia:"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R$ 12,00"
            android:layout_alignParentRight="true"
            android:layout_alignBaseline="@+id/txt5"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_below="@id/txt5"
            android:background="@color/cinza"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/txt6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Média de gasto por mês:"
            android:layout_below="@+id/view2"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textSize="15sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R$ 240,00"
            android:layout_alignParentRight="true"
            android:layout_alignBaseline="@+id/txt6"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:textStyle="bold"/>
        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_below="@id/txt6"
            android:background="@color/cinza"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>




    </RelativeLayout>

</LinearLayout>
