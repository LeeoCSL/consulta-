<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="br.com.consultai.MainActivity">

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_default" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:padding="15dp"
        android:background="@drawable/borda_layout">

        <TextView
            android:id="@+id/txt_nome_bilhete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bilhete teste"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_nome_bilhete"
            android:layout_marginTop="10dp"
            android:text="Saldo atual:"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txt_valor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/txt1"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/txt1"
            android:text="R$ 10,00"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/layout_dias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_valor"
            android:layout_marginTop="10dp"
            android:foregroundGravity="center"
            android:gravity="center"
            android:padding="5dp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/btn_default" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="S"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/btn_default" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="T"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/btn_default" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Q"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/btn_default" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Q"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/btn_default" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="S"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/btn_default" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="S"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/btn_default" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="D"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF" />
            </FrameLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_dias"
            android:layout_marginTop="10dp"
            android:text="07:00" />

        <TextView
            android:id="@+id/txt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_dias"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/txt2"
            android:text="17:15" />

        <Button
            android:layout_width="80dp"
            android:layout_height="33dp"
            android:layout_below="@+id/layout_dias"
            android:layout_toLeftOf="@+id/btn_editar"
            android:background="@drawable/btn_cinza"
            android:textColor="@color/cinza_escuro"
            android:textStyle="bold"

            android:text="Excluir"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"/>

        <Button
            android:id="@+id/btn_editar"
            android:layout_width="80dp"
            android:layout_height="33dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/layout_dias"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/btn_default"
            android:text="Editar"
            android:textColor="#FFFFFF"/>

    </RelativeLayout>
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adicionar viagem extra"
        android:textColor="@color/cinza_escuro"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:gravity="center"

  />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/btn_default" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text=" ?"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:layout_marginRight="2dp"
            android:textStyle="bold"/>
    </FrameLayout>

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="5dp"
        android:layout_marginTop="10dp"
>
        
        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Onibus/Metro \n3,80"
            android:layout_marginRight="25dp"
            android:background="@drawable/btn_cinza"
            android:textColor="@color/cinza_escuro"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Integração \n6,80"
            android:layout_marginLeft="25dp"
            android:background="@drawable/btn_default"
            android:textColor="@color/white"/>
        
        
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/txtResumo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RESUMO DE USO"
            android:textStyle="bold"
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/txt4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Previsão com base em saldo atual:"
            android:layout_below="@+id/txtResumo"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textSize="15sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00/00/0000"
            android:layout_alignParentRight="true"
            android:layout_alignBaseline="@+id/txt4"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_below="@id/txt4"
            android:background="@color/cinza"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/txt5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view1"
            android:text="Média de gasto por dia:"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R$ 12,00"
            android:layout_alignParentRight="true"
            android:layout_alignBaseline="@+id/txt5"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_below="@id/txt5"
            android:background="@color/cinza"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/txt6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Média de gasto por mês:"
            android:layout_below="@+id/view2"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textSize="15sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R$ 240,00"
            android:layout_alignParentRight="true"
            android:layout_alignBaseline="@+id/txt6"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:textStyle="bold"/>
        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_below="@id/txt6"
            android:background="@color/cinza"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>




    </RelativeLayout>


</LinearLayout>
