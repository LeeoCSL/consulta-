<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.consultai.Fragments.MainFragment">


    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_default" />

    <RelativeLayout
        android:id="@+id/layoutMain"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_below="@+id/img_logo"
        android:layout_margin="15dp"
        android:background="@drawable/borda_layout"
        android:padding="15dp">

        <TextView
            android:id="@+id/txt_nome_bilhete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bilhete teste"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btnAtualizar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/icon_atualizar"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_nome_bilhete"
            android:layout_marginTop="10dp"
            android:text="Saldo atual:"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txt_valor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/txt1"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/txt1"
            android:text="R$"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="bold" />



        <LinearLayout
            android:id="@+id/layout_dias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_valor"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="30dp"
            android:foregroundGravity="center"
            android:gravity="center"
            android:padding="5dp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/btn_default" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="S"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/btn_default" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="T"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/btn_default" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Q"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/btn_default" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Q"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/btn_default" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="S"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/btn_default" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="S"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/btn_default" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="D"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF" />
            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutHrs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_dias"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/txt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_dias"
                android:text="07:00"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_dias"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/txt2"
                android:text="17:15"
                android:textSize="20sp" />

        </LinearLayout>

        <Button
            android:id="@+id/btnRecarga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layoutHrs"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_default"
            android:text="Recarreguei meu bilhete"
            android:textColor="#FFFFFF"
            android:onClick="recargaBilhete"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnRecarga"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:padding="5dp">

            <Button
                android:layout_width="80dp"
                android:layout_height="33dp"
                android:layout_below="@+id/layoutHrs"
                android:layout_marginRight="5dp"

                android:layout_toLeftOf="@+id/btn_editar"
                android:background="@drawable/btn_cinza"

                android:text="Excluir"
                android:textColor="@color/cinza_escuro"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_editar"
                android:layout_width="80dp"
                android:layout_height="33dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/layoutHrs"
                android:layout_marginLeft="5dp"

                android:background="@drawable/btn_default"
                android:onClick="editar"
                android:text="Editar"
                android:textColor="#FFFFFF" />

        </LinearLayout>
    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/layoutMain"
        android:layout_marginRight="16dp"
        android:backgroundTint="@color/colorPrimary"
        android:src="@drawable/mais" />

</FrameLayout>
